class Animal (Main) {
    public: 
        string getClass() {
            return animal; 
        }

        string getType() {
            return type;
        }
        
        int numLegs() {
            return legs;
        }

        bool hasFur() {
            return fur;
        }

        bool canFly() {
            return canFly;
        }
        
        void noise() {
            Olympus.println("Noise");
        }

        void funFact() {
            Olympus.println("There are 5 different animal classes: Mammals, Birds, Insects, Amphibians, and Reptiles!");
        }

    private:
        string animal;
        string type;
        int legs;
        bool fur;
        bool canFly;

}

class Cat of Animal (Main) {
    public:
        Cat Cat() {
            animal = "Mammal"; 
            type = "Cat";
            legs = 4;
            fur = true;
            canFly = false;

        }
        
        void noise() {
            Olympus.println("Meow!");
        }

