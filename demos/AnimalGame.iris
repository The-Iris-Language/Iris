            Olympus.print("Fun fact");
            string input = Olympus.getLine();
            if (input == "Class") {
                Olympus.print("The animal is part of the class: ");
                Olympus.print(a.getClass());
            } else if (input == "Legs") {
                Olympus.print("The animal has ");
                Olympus.print(a.numLegs());
                Olympus.print(" legs");
